<article class="uk-card uk-card-default uk-card-body uk-margin">
  <h2>Ã‰dite ton profil</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "uk-form-stacked") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <fieldset class="uk-fieldset">

      <div class="uk-margin">
        <%= f.label :email, class: "uk-form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="uk-margin">
        <%= f.label :password, class: "uk-form-label" %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "uk-input" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="uk-margin">
        <%= f.label :password_confirmation, class: "uk-form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "uk-input" %>
      </div>

      <div class="uk-margin">
        <%= f.label :current_password, class: "uk-form-label" %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "uk-input" %>
      </div>
    </fieldset>

    <div class="actions">
      <%= f.submit "Update", class: "uk-button uk-button-default" %>
    </div>
  <% end %>

  <h3>Supprimer mon compte</h3>

  <div><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "uk-button uk-button-default" %></div>
</article>
